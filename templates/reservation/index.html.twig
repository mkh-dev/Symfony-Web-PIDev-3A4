{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numres</th>
                <th>Nbplaces</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.numres }}</td>
                <td>{{ reservation.nbplaces }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'numres': reservation.numres}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'numres': reservation.numres}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
