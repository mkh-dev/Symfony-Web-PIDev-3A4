{% extends 'base.html.twig' %}

{% block title %}Reclamations index{% endblock %}

{% block body %}
    <h1>Reclamations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.prenom }}</td>
                <td>{{ reclamation.nom }}</td>
                <td>{{ reclamation.email }}</td>
                <td>{{ reclamation.message }}</td>
                <td>
                    <a href="{{ path('app_reclamations_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamations_new') }}">Create new</a>
{% endblock %}
