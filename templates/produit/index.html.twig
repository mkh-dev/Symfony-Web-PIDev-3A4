{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdProd</th>
                <th>NomProd</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>NomPart</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProd }}</td>
                <td>{{ produit.nomProd }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.nomPart }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'idProd': produit.idProd}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'idProd': produit.idProd}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
